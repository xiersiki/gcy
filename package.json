{
  "name": "gcy",
  "private": true,
  "version": "0.0.0",
  "type": "module",
  "packageManager": "pnpm@10.23.0",
  "scripts": {
    "dev": "pnpm content:build && next dev",
    "dev:work": "node scripts/dev/work.mjs",
    "build": "NEXT_OUTPUT=export pnpm content:build && next build && pnpm demos:build && node scripts/build/assemble-dist.mjs",
    "preview": "node scripts/dev/preview-dist.mjs",
    "start": "next start",
    "typecheck": "pnpm content:build && tsc -p tsconfig.json --noEmit",
    "lint": "eslint . --max-warnings=0",
    "lint:fix": "eslint . --fix",
    "format": "prettier . --write",
    "format:check": "prettier . --check",
    "test": "vitest",
    "test:ci": "vitest run",
    "coverage": "vitest run --coverage",
    "prepare": "husky",
    "content:build": "node scripts/content/build.mjs",
    "content:validate": "node scripts/content/validate.mjs",
    "demos:build": "pnpm -r --filter \"./demos/**\" run build"
  },
  "lint-staged": {
    "*": [
      "prettier --write --ignore-unknown"
    ],
    "*.{ts,tsx}": [
      "eslint --fix"
    ]
  },
  "dependencies": {
    "@arco-design/web-react": "^2.66.9",
    "@mdx-js/react": "^3.1.1",
    "@supabase/ssr": "^0.7.0",
    "@supabase/supabase-js": "^2.49.1",
    "next": "15.1.0",
    "react": "^19.2.0",
    "react-dom": "^19.2.0"
  },
  "devDependencies": {
    "@commitlint/cli": "^19.8.0",
    "@commitlint/config-conventional": "^19.8.0",
    "@eslint/js": "^9.39.1",
    "@mdx-js/loader": "^3.1.1",
    "@next/mdx": "15.1.0",
    "@testing-library/jest-dom": "^6.6.3",
    "@testing-library/react": "^16.2.0",
    "@testing-library/user-event": "^14.6.1",
    "@types/mdx": "^2.0.13",
    "@types/node": "^24.10.1",
    "@types/react": "^19.2.5",
    "@types/react-dom": "^19.2.3",
    "@vitest/coverage-v8": "^3.2.4",
    "eslint": "^9.39.1",
    "eslint-config-prettier": "^10.1.8",
    "eslint-plugin-react-hooks": "^7.0.1",
    "eslint-plugin-react-refresh": "^0.4.24",
    "globals": "^16.5.0",
    "husky": "^9.1.7",
    "jsdom": "^26.0.0",
    "lint-staged": "^15.4.3",
    "prettier": "^3.5.1",
    "remark-gfm": "^4.0.1",
    "typescript": "~5.9.3",
    "typescript-eslint": "^8.46.4",
    "vitest": "^3.2.4",
    "yaml": "^2.8.1",
    "zod": "^3.25.76"
  }
}
