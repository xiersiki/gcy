{
  "name": "gcy",
  "private": true,
  "version": "0.0.0",
  "type": "module",
  "packageManager": "pnpm@10.23.0",
  "engines": {
    "node": ">=24"
  },
  "scripts": {
    "dev": "pnpm content:build && next dev",
    "dev:work": "node scripts/dev/work.mjs",
    "build": "pnpm run build:ssr",
    "build:prepare": "pnpm content:build && pnpm demos:build && node scripts/build/sync-public-demos.mjs",
    "build:ssr": "pnpm run build:prepare && next build",
    "build:next": "pnpm run build:ssr",
    "build:cloudflare": "pnpm run build:prepare && pnpm exec opennextjs-cloudflare build",
    "preview:cloudflare": "pnpm run build:cloudflare && pnpm exec wrangler dev",
    "deploy:cloudflare": "pnpm run build:cloudflare && pnpm exec opennextjs-cloudflare deploy",
    "build:export": "NEXT_OUTPUT=export pnpm content:build && pnpm demos:build && node scripts/build/assemble-dist.mjs",
    "preview": "node scripts/dev/preview-dist.mjs",
    "start": "next start",
    "typecheck": "pnpm content:build && tsc -p tsconfig.json --noEmit",
    "lint": "eslint . --max-warnings=0",
    "lint:fix": "eslint . --fix",
    "format": "prettier . --write",
    "format:check": "prettier . --check",
    "test": "vitest",
    "test:ci": "vitest run",
    "coverage": "vitest run --coverage",
    "prepare": "husky",
    "demo:new": "node scripts/demo/new.mjs",
    "content:build": "node scripts/content/build.mjs",
    "content:validate": "node scripts/content/validate.mjs",
    "demos:build": "pnpm -r --filter \"./demos/**\" run build"
  },
  "lint-staged": {
    "*": [
      "prettier --write --ignore-unknown"
    ],
    "*.{ts,tsx}": [
      "eslint --fix"
    ]
  },
  "dependencies": {
    "@arco-design/web-react": "^2.66.9",
    "@mdx-js/react": "^3.1.1",
    "@supabase/ssr": "^0.7.0",
    "@supabase/supabase-js": "^2.90.1",
    "framer-motion": "^12.26.1",
    "lucide-react": "^0.562.0",
    "next": "15.4.10",
    "react": "^19.2.3",
    "react-dom": "^19.2.3",
    "sass": "^1.97.2"
  },
  "devDependencies": {
    "@opennextjs/cloudflare": "^1.14.8",
    "@commitlint/cli": "^19.8.0",
    "@commitlint/config-conventional": "^19.8.0",
    "@eslint/js": "^9.39.1",
    "@mdx-js/loader": "^3.1.1",
    "@next/mdx": "15.4.10",
    "@testing-library/jest-dom": "^6.9.1",
    "@testing-library/react": "^16.3.1",
    "@testing-library/user-event": "^14.6.1",
    "@types/mdx": "^2.0.13",
    "@types/node": "^24.10.7",
    "@types/react": "^19.2.8",
    "@types/react-dom": "^19.2.3",
    "@vitest/coverage-v8": "^3.2.4",
    "css-loader": "^7.1.2",
    "eslint": "^9.39.2",
    "eslint-config-prettier": "^10.1.8",
    "eslint-plugin-react-hooks": "^7.0.1",
    "eslint-plugin-react-refresh": "^0.4.26",
    "globals": "^16.5.0",
    "husky": "^9.1.7",
    "jsdom": "^26.1.0",
    "lint-staged": "^15.5.2",
    "open-next": "^3.1.3",
    "prettier": "^3.7.4",
    "remark-gfm": "^4.0.1",
    "typescript": "~5.9.3",
    "typescript-eslint": "^8.53.0",
    "vitest": "^3.2.4",
    "wrangler": "^4.53.0",
    "yaml": "^2.8.2",
    "zod": "^3.25.76"
  }
}
